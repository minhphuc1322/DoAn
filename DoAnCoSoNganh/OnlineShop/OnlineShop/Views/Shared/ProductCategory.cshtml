@model List<OnlineShop.Models.ProductCategory>
    <ul>
        <h3>Doanh mục sản phẩm</h3>
        @foreach (var item in Model.Where(x=>x.ParentID==null))
        {
            var child = Model.Where(x => x.ParentID == item.ID);
            var parentClass = child.Count()>0?"class=dropdown-toggledata-toggle=dropdown":"";
            <li class="dropdown">
                <a href="/san-pham/@item.MetaTitle-@item.ID" @parentClass>@item.Name</a>
                <ul class="dropdown-menu ">
                    @foreach (var childItem in child)
                    {
                        <li>
                            <a href="/san-pham/@item.MetaTitle-@item.ID">@childItem.Name</a>
                        </li>
                    }
                    
                </ul>
        </li>

        }

    </ul>
